<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical"
    tools:context="cn.chronoswap.chronoswap.ProfileFragment">
    <RelativeLayout
        android:id="@+id/profile_re_myinfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/white">

    <ImageView
        android:id="@+id/profile_iv_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:src="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/profile_ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/profile_iv_avatar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="#353535"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/profile_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/profile_iv_avatar"
        android:text="id:12345678"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>
